limit_req_zone $binary_remote_addr zone=ll_per_ip:20m rate=2r/m;

server {
        limit_req zone=ll_per_ip burst=4 nodelay;

        root /var/www/empty/html;
        index index.html;

        server_name yourdomain;

        location = /robots.txt {
           add_header Content-Type text/plain;
           return 200 "User-agent: *\nDisallow: /\n";
        }

        location / {
                proxy_pass http://127.0.0.1:19589;
        }

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/yourdomain/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/yourdomain/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = yourdomain) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen 80;
        listen [::]:80;

        server_name yourdomain;
    return 404; # managed by Certbot
}
